<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="content-language" lang="zh-cn">
    <title>问卷系统登录</title>
    <link href="~/Content/bootstrap2.css" rel="stylesheet" />
    <style>
        body {
            color: white;
        }

        .main-position {
            width: 60%;
            margin: 150px auto;
        }

            .main-position .control-group {
                margin-left: 50px;
            }
    </style>

</head>
<body>
    <div class="container">
        <div class="main-position">
            @using (Html.BeginForm("ForgetPassword", "Auth", FormMethod.Post, new { @class = "form_horizontal", Ares = "UserOP", id="forgetform"}))
            {
                <fieldset>
                    <legend>
                        <span style="color:#0088cc;">找回密码</span>
                    </legend>
                    <p id="Msg" style="color:red"></p>
                    <div class="control-group">
                        <input type="text" id="email" name="email" placeholder="输入您的登录邮箱" class="span4" style="height: 40px;line-height:40px;" />
                    </div>
                    <div class="control-group">
                        <button type="submit" class="btn btn-primary span2" style="margin-left: 0px;">提交</button>
                    </div>
                    <div class="control-group">
                        <p>
                            <span style="color:red;line-height:50%; margin-left:0px;margin-top:100px !important;">
                                @ViewBag.Msg
                            </span>
                        </p>
                    </div>
                </fieldset>
            }
        </div>
    </div>
    <script>
        document.getElementById("forgetform").onsubmit = function ()
        {
            if (email.value == "") {
                document.getElementById("Msg").innerHTML = "邮箱不能为空";
                return false;
            }
        }
    </script>
</body>
</html>
